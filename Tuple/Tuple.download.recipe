<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<key>Description</key>
	<string>Downloads the latest version of Tuple. Borrowed from williamtheaker/autopkg-recipes</string>
	<key>Identifier</key>
	<string>com.github.weswhet.download.Tuple</string>
	<key>Input</key>
	<dict>
		<key>NAME</key>
		<string>Tuple</string>
	</dict>
	<key>MiniumumVersion</key>
	<string>1.0</string>
	<key>Process</key>
	<array>
		<dict>
        <key>Processor</key>
        <string>SparkleUpdateInfoProvider</string>
        <key>Arguments</key>
        <dict>
            <key>appcast_url</key>
            <string>https://d32ifkf9k9ezcg.cloudfront.net/production/sparkle/appcast.xml</string>
        </dict>
    </dict>
		<dict>
        <key>Processor</key>
        <string>URLDownloader</string>
        <key>Arguments</key>
        <dict>
            <key>filename</key>
            <string>%NAME%-%version%.zip</string>
        </dict>
    </dict>
		<dict>
        <key>Processor</key>
        <string>URLDownloader</string>
        <key>Arguments</key>
        <dict>
            <key>filename</key>
            <string>%NAME%-%version%.zip</string>
        </dict>
    </dict>
    <dict>
        <key>Processor</key>
        <string>EndOfCheckPhase</string>
				<key>Comment</key>
				<string>End new version phase.</string>
    </dict>
		<dict>
        <key>Processor</key>
        <string>Unarchiver</string>
        <key>Arguments</key>
        <dict>
            <key>filename</key>
            <string>%RECIPE_CACHE_DIR%/downloads/%filename%</string>
        </dict>
    </dict>
		<dict>
			<key>Arguments</key>
			<dict>
				<key>input_path</key>
				<string>%RECIPE_CACHE_DIR%/%NAME%/Tuple.app</string>
                <key>requirement</key>
                <string>anchor apple generic and identifier "app.tuple.app" and (certificate leaf[field.1.2.840.113635.100.6.1.9] /* exists */ or certificate 1[field.1.2.840.113635.100.6.2.6] /* exists */ and certificate leaf[field.1.2.840.113635.100.6.1.13] /* exists */ and certificate leaf[subject.OU] = DQYU7DR9Q7)</string>
            </dict>
			<key>Processor</key>
			<string>CodeSignatureVerifier</string>
		</dict>
	</array>
</dict>
</plist>
